{% macro PriceRange(args) %}
  <div class="price-range-block">
    <h6 class="title">Price Range</h6>
      <div class="slider-wrapper">
        <div class="slider">
          <div class="progress"></div>
        </div>
        <div class="range-input">
          <input type="range" class="range-min" min="0" max="10000" value="2500" step="100">
          <input type="range" class="range-max" min="0" max="10000" value="7500" step="100">
        </div>
        <div class="price-input">
          <div class="field">
            <input type="text" class="input-min form-control" placeholder="Min price">
          </div>
          <div class="field">
            <input type="text" class="input-max form-control" placeholder="Max price">
          </div>
        </div>
      </div>
      <div class="price-box">
        <form action="#">
          <div class="form-check">
            <input class="form-check-input selectall" type="checkbox" id="select-all">
            <label class="form-check-label" for="select-all">
              All Price
